            }
            .box-style{
                padding: 26px;
                background-color: #5edbf5;
                color: #fff;
                text-decoration: none;
                border-radius: 2px;
            }
            @media (max-width: 768px){
                a{
                    font-size: 15px!important;
                }
                p{
                    font-size: 13px!important;
                }
                .box-text{
                    font-size: 13px;
                }
                .box-style{
                    padding: 20px;
                    background-color: #5edbf5;
                    color: #fff;
                    text-decoration: none;
                    border-radius: 2px;
                    font-size: 13px!important;
                }
            }
